<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" alignment="CENTER" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="banking.ui.view.AccountManagementView"
      style="-fx-background-color: #f4f7f9; -fx-padding: 20;">
    
    <Label fx:id="accountNumberLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" />
    <Label fx:id="accountTypeLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
    <Label fx:id="balanceLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2e7d32; -fx-padding: 0 0 20 0;" />
    
    <HBox spacing="20" alignment="CENTER">
        <!-- Left side: Transaction Form -->
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label text="New Transaction" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            
            <GridPane hgap="10" vgap="15" style="-fx-padding: 10 0;">
                <!-- Amount -->
                <Label text="Amount (BWP):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="amountField" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                          style="-fx-pref-width: 200; -fx-padding: 8;" />
                
                <!-- Description -->
                <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextArea fx:id="descriptionField" promptText="Enter description" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                         style="-fx-pref-width: 200; -fx-pref-height: 80; -fx-padding: 8;" wrapText="true" />
            </GridPane>
            
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="depositButton" text="Deposit" 
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 25; -fx-font-size: 14px; -fx-cursor: hand;" />
                
                <Button fx:id="withdrawButton" text="Withdraw" 
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10 25; -fx-font-size: 14px; -fx-cursor: hand;" />
            </HBox>
        </VBox>
        
        <!-- Right side: Transaction History -->
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label text="Transaction History" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            
            <TableView fx:id="transactionTable" style="-fx-pref-width: 600; -fx-pref-height: 300;">
                <columns>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="120" />
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="80" />
                    <TableColumn fx:id="amountColumn" text="Amount (BWP)" prefWidth="120" />
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200" />
                    <TableColumn fx:id="balanceColumn" text="Balance (BWP)" prefWidth="120" />
                </columns>
            </TableView>
        </VBox>
    </HBox>
    
    <!-- Back Button -->
    <Button fx:id="backButton" text="Back to Accounts" 
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10 25; -fx-font-size: 14px; -fx-cursor: hand;" />
    
    <!-- Error message label (initially hidden) -->
    <Label fx:id="errorLabel" style="-fx-text-fill: #d32f2f; -fx-font-size: 12px; -fx-padding: 5 0;" visible="false" />
    
</VBox>
