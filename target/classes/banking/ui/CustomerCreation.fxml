<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" alignment="CENTER" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="banking.ui.view.CustomerCreationView"
      style="-fx-background-color: #f4f7f9; -fx-padding: 40;">
    
    <Label text="Create New Customer Account" style="-fx-text-fill: #1976d2; -fx-font-size: 24px; -fx-font-weight: bold;" />
    
    <VBox spacing="15" alignment="CENTER" 
          style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        
        <Label text="Customer Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />
        
        <GridPane hgap="15" vgap="15" style="-fx-padding: 10 0;">
            <!-- Customer Type -->
            <Label text="Customer Type:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ChoiceBox fx:id="typeChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                      style="-fx-pref-width: 250;" />
            
            <!-- Name -->
            <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                      style="-fx-pref-width: 250; -fx-padding: 8;" />
            
            <!-- Identifier -->
            <Label text="National ID:" fx:id="identifierLabel" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="identifierField" promptText="Enter National ID" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                     style="-fx-pref-width: 250; -fx-padding: 8;" />
            
            <!-- Account Type -->
            <Label text="Account Type:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ChoiceBox fx:id="accountTypeChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="3" 
                     style="-fx-pref-width: 250;" />
            
            <!-- Initial Deposit -->
            <Label text="Initial Deposit (BWP):" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="initialDepositField" promptText="Enter amount" GridPane.columnIndex="1" GridPane.rowIndex="4" 
                     style="-fx-pref-width: 250; -fx-padding: 8;" />
        </GridPane>
        
        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
            <Button fx:id="submitButton" text="Create Account" 
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-cursor: hand;" />
            
            <Button fx:id="backButton" text="Back to Login" 
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-cursor: hand;" />
        </HBox>
    </VBox>
    
    <!-- Error message label (initially hidden) -->
    <Label fx:id="errorLabel" style="-fx-text-fill: #d32f2f; -fx-font-size: 12px; -fx-padding: 5 0;" visible="false" />
    
</VBox>
