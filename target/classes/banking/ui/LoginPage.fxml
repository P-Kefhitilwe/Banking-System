<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- FX Controller will be banking.ui.view.LoginView (to be created in Java) -->
<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="banking.ui.view.LoginView"
      style="-fx-background-color: #f4f7f9; -fx-padding: 30; -fx-border-color: #b0c4de; -fx-border-width: 1px; -fx-border-radius: 10;">
   
    <Label text="Welcome to the Banking System" style="-fx-text-fill: #1976d2;">
        <font><Font name="System Bold" size="24.0" /></font>
    </Label>
    
    <Label text="Please Enter Your Identifier:" style="-fx-font-size: 14px;" />
    
    <TextField fx:id="identifierField" promptText="National ID or Registration Number" style="-fx-pref-width: 300; -fx-padding: 10; -fx-border-radius: 5;" />
    
    <Button fx:id="loginButton" text="Login to Account" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-cursor: hand;" />
    
    <Label text="New Customer?" style="-fx-font-size: 12px; -fx-padding: 10 0 0 0;" />
    
    <Button fx:id="registerButton" text="Register Here" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 8 15; -fx-font-size: 12px; -fx-cursor: hand;" />
    
</VBox>
