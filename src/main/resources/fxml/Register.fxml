<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml"
            fx:controller="banking.controller.RegisterController"
            styleClass="container" stylesheets="@../css/banking-styles.css"
            prefWidth="1000" prefHeight="700">

    <center>
        <VBox alignment="CENTER" spacing="24" styleClass="card"
              maxWidth="500" maxHeight="650">
            <padding>
                <Insets top="40" left="48" right="48" bottom="40"/>
            </padding>

            <!-- Header -->
            <VBox alignment="CENTER" spacing="8">
                <Label text="Create Account" styleClass="header-large"/>
                <Label text="Join our banking system today"
                       style="-fx-text-fill: -fx-text-secondary; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Registration Form -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                <VBox spacing="16" prefWidth="380">
                    <VBox spacing="6">
                        <Label text="Full Name" style="-fx-font-weight: 600;"/>
                        <TextField fx:id="nameField" promptText="John Doe" prefHeight="40"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="ID Number" style="-fx-font-weight: 600;"/>
                        <TextField fx:id="idNumberField" promptText="BW123456" prefHeight="40"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="Email Address" style="-fx-font-weight: 600;"/>
                        <TextField fx:id="emailField" promptText="john.doe@example.com" prefHeight="40"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="Phone Number" style="-fx-font-weight: 600;"/>
                        <TextField fx:id="phoneField" promptText="72123456" prefHeight="40"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="Address" style="-fx-font-weight: 600;"/>
                        <TextField fx:id="addressField" promptText="Plot 123, Gaborone" prefHeight="40"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="Password" style="-fx-font-weight: 600;"/>
                        <PasswordField fx:id="passwordField" promptText="Minimum 6 characters" prefHeight="40"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="Confirm Password" style="-fx-font-weight: 600;"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" prefHeight="40"/>
                    </VBox>
                </VBox>
            </ScrollPane>

            <!-- Buttons -->
            <VBox spacing="12">
                <Button text="Create Account" onAction="#handleRegister"
                        prefWidth="380" prefHeight="45"
                        style="-fx-font-size: 15px; -fx-font-weight: 600;"/>

                <Button text="Back to Login" onAction="#handleBackToLogin"
                        styleClass="button-secondary" prefWidth="380" prefHeight="45"/>
            </VBox>

            <!-- Message Label -->
            <Label fx:id="messageLabel" wrapText="true" textAlignment="CENTER" maxWidth="380"/>
        </VBox>
    </center>
</BorderPane>
