<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>

<!-- FX Controller will be banking.ui.view.AccountSelectionView (to be created in Java) -->
<VBox spacing="15" alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="banking.ui.view.AccountSelectionView"
      style="-fx-background-color: #e3f2fd; -fx-padding: 25;">
      
    <Label fx:id="welcomeLabel" text="Welcome, [Customer Name]" style="-fx-text-fill: #0d47a1; -fx-font-weight: bold;">
        <font><Font size="20.0" /></font>
    </Label>
    
    <Label text="Your Accounts:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    
    <!-- This ListView will be populated in Week 5 (Controller logic) -->
    <ListView fx:id="accountListView" VBox.vgrow="ALWAYS" style="-fx-border-color: #bbdefb; -fx-border-radius: 5;" />
    
    <Button fx:id="selectAccountButton" text="View Selected Account" disable="true" style="-fx-background-color: #42a5f5; -fx-text-fill: white; -fx-padding: 10; -fx-cursor: hand;" maxWidth="Infinity" />

    <Button fx:id="processInterestButton" text="Process Monthly Interest" style="-fx-background-color: #fbc02d; -fx-text-fill: black; -fx-padding: 10; -fx-cursor: hand;" maxWidth="Infinity" />
    
    <Button fx:id="logoutButton" text="Logout" style="-fx-background-color: #e57373; -fx-text-fill: white; -fx-padding: 8 15; -fx-cursor: hand;" maxWidth="Infinity" />
</VBox>
