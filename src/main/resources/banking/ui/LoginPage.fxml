<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.Color?>

<VBox spacing="20" alignment="CENTER" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="banking.ui.view.LoginView"
      style="-fx-background-color: #f4f7f9; -fx-padding: 40; -fx-border-color: #b0c4de; -fx-border-width: 1px; -fx-border-radius: 10;">
   
    <Label text="Welcome to the Banking System" style="-fx-text-fill: #1976d2;">
        <font><Font name="System Bold" size="24.0" /></font>
    </Label>
    
    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="Login to Your Account" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />
        
        <GridPane hgap="10" vgap="10" style="-fx-padding: 10 0;">
            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="usernameField" promptText="Enter your username" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                      style="-fx-pref-width: 250; -fx-padding: 8;" />
            
            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <PasswordField fx:id="passwordField" promptText="Enter your password" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                         style="-fx-pref-width: 250; -fx-padding: 8;" />
        </GridPane>
        
        <Button fx:id="loginButton" text="Sign In" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-size: 14px; -fx-cursor: hand;" />
        
        <HBox alignment="CENTER" spacing="5" style="-fx-padding: 10 0 0 0;">
            <Label text="Don't have an account?" style="-fx-text-fill: #666;" />
            <Button fx:id="registerButton" text="Register Here" 
                    style="-fx-background-color: transparent; -fx-text-fill: #2196F3; -fx-padding: 0; -fx-underline: true; -fx-cursor: hand;" />
        </HBox>
    </VBox>
    
    <!-- Error message label (initially hidden) -->
    <Label fx:id="errorLabel" style="-fx-text-fill: #d32f2f; -fx-font-size: 12px; -fx-padding: 5 0;" visible="false" />
    
</VBox>
